<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/25.0.0"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.teamlostandfound.LoginPanelController"
      alignment="CENTER" spacing="15"
      prefWidth="360" prefHeight="420"
      style="-fx-background-color: white; -fx-background-radius: 10;">

    <!-- Header -->
    <VBox alignment="CENTER" prefHeight="100"
          style="-fx-background-color: #d8e7ff; -fx-background-radius: 10 10 0 0;">
        <Label text="Lost and Found"
               style="-fx-font-family: 'Arial'; -fx-font-size: 20; -fx-font-weight: bold;"/>
        <Label text="Management System"
               style="-fx-font-family: 'Arial'; -fx-font-size: 18; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Login Title -->
    <Label text="LOGIN"
           style="-fx-font-family: 'Arial'; -fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Username Field -->
    <TextField fx:id="username" promptText="Username"
               prefWidth="250" prefHeight="40"
               style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 14;"/>

    <!-- Password Field -->
    <PasswordField fx:id="password" promptText="Password"
                   prefWidth="250" prefHeight="40"
                   style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 14;"/>

    <!-- Login Button -->
    <Button text="Login" onAction="#handleLogin"
            prefWidth="250" prefHeight="40"
            style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 6;"/>

</VBox>
