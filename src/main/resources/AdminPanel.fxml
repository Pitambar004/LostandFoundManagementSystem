<BorderPane minHeight="550.0" minWidth="850.0" prefHeight="600.0" prefWidth="900.0" stylesheets="@/styles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamlostandfound.AdminPanelController">

    <top>
        <AnchorPane minHeight="50.0" prefHeight="50.0" styleClass="header-pane">
            <Label alignment="CENTER" layoutX="0.0" layoutY="5.0" styleClass="header-label" text="Admin Control Panel" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" mouseTransparent="true" />
            <Button fx:id="homeBtn" layoutX="10.0" layoutY="8.0" minHeight="30.0" minWidth="70.0" onAction="#goHome" styleClass="home-button" text="Home" />
        </AnchorPane>
    </top>

    <center>
        <VBox spacing="12.0" alignment="TOP_CENTER" styleClass="content-pane" VBox.vgrow="ALWAYS">
            <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="search-container">
                <TextField fx:id="searchField" minWidth="200.0" prefWidth="300.0" promptText="ðŸ” Search items..." styleClass="modern-text-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="searchBtn" minHeight="35.0" minWidth="40.0" onAction="#onSearch" prefHeight="35.0" prefWidth="40.0" styleClass="search-button" text="ðŸ”" />
                <ComboBox fx:id="categoryFilter" minWidth="130.0" prefWidth="150.0" promptText="All Categories" styleClass="modern-combo-box" />
            </HBox>

            <TableView fx:id="adminTable" prefHeight="350.0" prefWidth="750.0" styleClass="modern-table-view" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameCol" minWidth="100.0" prefWidth="130.0" text="Item Name" />
                    <TableColumn fx:id="categoryCol" minWidth="80.0" prefWidth="110.0" text="Category" />
                    <TableColumn fx:id="locationCol" minWidth="100.0" prefWidth="130.0" text="Location" />
                    <TableColumn fx:id="statusCol" minWidth="80.0" prefWidth="110.0" text="Status" />
                    <TableColumn fx:id="dateCol" minWidth="80.0" prefWidth="110.0" text="Date" />
                    <TableColumn fx:id="actionsCol" minWidth="80.0" prefWidth="120.0" text="Actions" />
                </columns>
            </TableView>

            <HBox spacing="20.0" alignment="CENTER">
                <Button fx:id="editBtn" minWidth="120.0" onAction="#onEdit" prefHeight="40.0" prefWidth="150.0" styleClass="normal-button" text="âœï¸ Edit" />
