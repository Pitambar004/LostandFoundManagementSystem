<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lostandfound.AddFoundItemController"
             prefWidth="800.0" prefHeight="500.0" style="-fx-background-color: #f5f7fa;">

    <top>
        <AnchorPane style="-fx-background-color: #dce8ff; -fx-padding: 15;">
            <Label text="Report Found Item"
                   layoutX="300" layoutY="5"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </AnchorPane>
    </top>

    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                    <ColumnConstraints halignment="LEFT" prefWidth="250"/>
                </columnConstraints>

                <children>
                    <Label text="Item Name:"/>
                    <TextField fx:id="itemNameField" GridPane.columnIndex="1"/>

                    <Label text="Category:" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="categoryBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Location Found:" GridPane.rowIndex="2"/>
                    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Date Found:" GridPane.rowIndex="3"/>
                    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Description:" GridPane.rowIndex="4"/>
                    <TextArea fx:id="descriptionArea" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </children>
            </GridPane>

            <Button fx:id="submitBtn" text="Submit Found Item"
                    style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 30 8 30; -fx-background-radius: 6;"/>
        </VBox>
    </center>

</BorderPane>
