<BorderPane minHeight="550.0" minWidth="850.0" prefHeight="600.0" prefWidth="900.0" stylesheets="@/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.teamlostandfound.LandingPageController">

    <top>
        <AnchorPane styleClass="header-pane" minHeight="50.0" prefHeight="50.0">
            <Label alignment="CENTER" layoutX="0.0" layoutY="5.0" styleClass="header-label" text="Lost and Found Management System" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" mouseTransparent="true" />
        </AnchorPane>
    </top>

    <left>
        <VBox alignment="TOP_CENTER" minWidth="160.0" prefWidth="180.0" spacing="10.0" styleClass="sidebar" VBox.vgrow="ALWAYS">
            <Button fx:id="dashboardBtn" maxWidth="1.7976931348623157E308" minWidth="150.0" onAction="#goToLandingPage" styleClass="sidebar-button" text="ðŸ  Dashboard" />
            <Button fx:id="addLostBtn" maxWidth="1.7976931348623157E308" minWidth="150.0" onAction="#goToAddLostItem" styleClass="sidebar-button" text="âž• Add Lost Item" />
            <Button fx:id="addFoundBtn" maxWidth="1.7976931348623157E308" minWidth="150.0" onAction="#goToAddFoundItem" styleClass="sidebar-button" text="ðŸ“¦ Add Found Item" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="adminLoginBtn" maxWidth="1.7976931348623157E308" minWidth="150.0" onAction="#goToLoginPanel" styleClass="sidebar-button" text="ðŸ” Admin Login" />
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="12.0" styleClass="content-pane" VBox.vgrow="ALWAYS">
            
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="search-container">
                <TextField fx:id="searchField" minWidth="250.0" prefWidth="400.0" promptText="ðŸ” Search items..." styleClass="modern-text-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="searchBtn" minHeight="35.0" minWidth="40.0" onAction="#onSearch" prefHeight="35.0" prefWidth="40.0" styleClass="search-button" text="ðŸ”" />
                <ComboBox fx:id="categoryFilter" minWidth="150.0" prefWidth="200.0" promptText="All Categories" styleClass="modern-combo-box" />
            </HBox>
            
            <TableView fx:id="itemTable" prefHeight="350.0" prefWidth="650.0" styleClass="modern-table-view" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameCol" minWidth="100.0" prefWidth="150.0" text="Item Name" />
                    <TableColumn fx:id="categoryCol" minWidth="80.0" prefWidth="120.0" text="Category" />
                    <TableColumn fx:id="locationCol" minWidth="100.0" prefWidth="150.0" text="Location" />
                    <TableColumn fx:id="statusCol" minWidth="80.0" prefWidth="120.0" text="Status" />
                    <TableColumn fx:id="dateCol" minWidth="100.0" prefWidth="150.0" text="Date" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
